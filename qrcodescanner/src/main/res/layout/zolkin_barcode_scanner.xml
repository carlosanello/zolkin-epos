<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <br.com.zolkin.qrcodescanner.barcodescanner.BarcodeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zolkin_barcode_surface"/>

    <br.com.zolkin.qrcodescanner.barcodescanner.ViewfinderView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zolkin_viewfinder_view"/>

    <TextView android:id="@+id/zolkin_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/zolkin_transparent"
        android:text="@string/zolkin_msg_default_status"
        android:textColor="@color/zolkin_status_text"/>
</merge>